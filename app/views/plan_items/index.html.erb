<div class="span-17 colborder" id="entry_menu">
  <%= link_to "Home", "/" %> | <%= link_to "New Plan Item", new_plan_item_path %> | <%= link_to "Entries ", entries_path %> 
  <br>
  <br>
<hr/>
<table style="width:640px">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Connotation</th>
    <th>Points</th>
    <th>Actions</th>
  </tr>
  <% @plan_items.each do |pi| %>
  <tr>
  <td><%= pi.id %></td>
  <td><%= pi.name%></td>
  <td><%= pi.description%></td>
  <td><%= pi.positiveconnotation ? "Positive" : "Negative"%></td>
  <td><%= pi.points %></td>
  <td><%= link_to( "edit", edit_plan_item_path(pi))%></td>
  </tr>
  <% end %>
</table>
</div>
